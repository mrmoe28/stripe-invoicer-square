# Database (Required)
# Get your PostgreSQL connection string from NeonDB
DATABASE_URL="postgresql://username:password@your-neon-endpoint.neon.tech/dbname?sslmode=require"

# Authentication (Required)
# Generate with: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-here"
NEXTAUTH_URL="http://localhost:3002"
NEXT_PUBLIC_APP_URL="http://localhost:3002"
APP_BASE_URL="http://localhost:3002"

# Stripe (Required for payments)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret_here"
# Optional: For production payment redirect (ngrok URL for local testing)
# STRIPE_REDIRECT_BASE_URL="https://your-ngrok-url.ngrok.io"

# Email Notifications (Required for forgot password and invoice sending)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY="re_your_resend_api_key_here"
NOTIFICATION_FROM_EMAIL="notifications@yourdomain.com"
NOTIFICATION_FROM_NAME="Ledgerflow"
INVOICE_ALERT_RECIPIENTS="your-email@domain.com"

# SMS Notifications (Optional - for invoice reminders)
TWILIO_ACCOUNT_SID="your_twilio_account_sid_here"
TWILIO_AUTH_TOKEN="your_twilio_auth_token_here"
TWILIO_MESSAGING_SERVICE_SID="your_twilio_messaging_service_sid_here"
TWILIO_FROM_NUMBER="+1your_twilio_phone_number"
