# ============================================
# LEDGERFLOW - Environment Variables Template
# ============================================
# Copy this file to .env and fill in your actual values
# This file is safe to commit to version control

# ============================================
# APPLICATION URLs
# ============================================
NEXTAUTH_URL="http://localhost:6743"
NEXT_PUBLIC_APP_URL="http://localhost:6743"
APP_BASE_URL="http://localhost:6743"

# ============================================
# DATABASE (PostgreSQL)
# ============================================
DATABASE_URL="postgresql://user:password@localhost:5432/ledgerflow?sslmode=require"

# ============================================
# AUTHENTICATION (NextAuth)
# ============================================
# Generate a secure secret: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
NEXTAUTH_SECRET="your-nextauth-secret-here"

# ============================================
# SQUARE API CONFIGURATION
# ============================================
SQUARE_ACCESS_TOKEN="your-square-access-token"
SQUARE_ENVIRONMENT="sandbox"
SQUARE_LOCATION_ID="your-square-location-id"
SQUARE_APPLICATION_ID="your-square-application-id"
SQUARE_WEBHOOK_SECRET="your-square-webhook-secret"
NEXT_PUBLIC_SQUARE_PLAN_VARIATION_ID=""
SQUARE_REDIRECT_BASE_URL=""

# ============================================
# STRIPE API CONFIGURATION (Optional)
# ============================================
STRIPE_SECRET_KEY="sk_test_your-stripe-secret-key"
STRIPE_WEBHOOK_SECRET="whsec_your-stripe-webhook-secret"

# ============================================
# EMAIL CONFIGURATION (Resend)
# ============================================
RESEND_API_KEY="re_your-resend-api-key"
NOTIFICATION_FROM_EMAIL="notifications@localhost"
NOTIFICATION_FROM_NAME="Ledgerflow"
INVOICE_ALERT_RECIPIENTS=""

# ============================================
# SMS CONFIGURATION (Twilio - Optional)
# ============================================
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_MESSAGING_SERVICE_SID="your-twilio-messaging-service-sid"
TWILIO_FROM_NUMBER="+1your-twilio-phone-number"

# ============================================
# ADMIN USER CONFIGURATION (Optional)
# ============================================
ADMIN_EMAIL="admin@ledgerflow.com"
ADMIN_PASSWORD="admin123"
ADMIN_NAME="Admin User"

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_LOCALE="en-US"
NODE_ENV="development"
